# TSI FlightDeck Environment Configuration

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/flightdeck
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=4h
MFA_ISSUER=TSI-FlightDeck

# Admin Account
ADMIN_EMAIL=kanati@translatorseries.com

# GitHub Integration
GITHUB_TOKEN=your-github-pat-token
GITHUB_ORG=TSIKanati

# External Services
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=tsi
INFLUXDB_BUCKET=flightdeck

# Application
NODE_ENV=development
PORT=3000
API_PORT=4000
WS_PORT=4001

# Cors
ALLOWED_ORIGINS=http://localhost:3000,https://flightdeck.translatorseries.com

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_GITHUB_SYNC=true
ENABLE_METRICS_COLLECTION=true
