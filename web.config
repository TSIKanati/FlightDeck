<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Security Headers -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                <add name="Permissions-Policy" value="geolocation=(), microphone=(), camera=()" />
            </customHeaders>
        </httpProtocol>

        <!-- Static Content MIME Types -->
        <staticContent>
            <remove fileExtension=".json" />
            <mimeMap fileExtension=".json" mimeType="application/json" />
        </staticContent>

        <!-- Compression -->
        <urlCompression doStaticCompression="true" doDynamicCompression="true" />

        <!-- Default Document -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.html" />
            </files>
        </defaultDocument>

        <!-- URL Rewrites: HTTPS + www canonicalization -->
        <rewrite>
            <rules>
                <rule name="Redirect to HTTPS" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="^OFF$" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
                </rule>
                <rule name="Canonical www to non-www" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTP_HOST}" pattern="^www\.urbot\.net$" />
                    </conditions>
                    <action type="Redirect" url="https://urbot.net/{R:1}" redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>

        <!-- Error Pages -->
        <httpErrors>
            <remove statusCode="400" />
            <error statusCode="400" path="C:\Inetpub\vhosts\urbot.net\error_docs\bad_request.html" />
            <remove statusCode="401" />
            <error statusCode="401" path="C:\Inetpub\vhosts\urbot.net\error_docs\unauthorized.html" />
            <remove statusCode="403" />
            <error statusCode="403" path="C:\Inetpub\vhosts\urbot.net\error_docs\forbidden.html" />
            <remove statusCode="404" />
            <error statusCode="404" path="C:\Inetpub\vhosts\urbot.net\error_docs\not_found.html" />
            <remove statusCode="405" />
            <error statusCode="405" path="C:\Inetpub\vhosts\urbot.net\error_docs\method_not_allowed.html" />
            <remove statusCode="406" />
            <error statusCode="406" path="C:\Inetpub\vhosts\urbot.net\error_docs\not_acceptable.html" />
            <remove statusCode="407" />
            <error statusCode="407" path="C:\Inetpub\vhosts\urbot.net\error_docs\proxy_authentication_required.html" />
            <remove statusCode="412" />
            <error statusCode="412" path="C:\Inetpub\vhosts\urbot.net\error_docs\precondition_failed.html" />
            <remove statusCode="414" />
            <error statusCode="414" path="C:\Inetpub\vhosts\urbot.net\error_docs\request-uri_too_long.html" />
            <remove statusCode="415" />
            <error statusCode="415" path="C:\Inetpub\vhosts\urbot.net\error_docs\unsupported_media_type.html" />
            <remove statusCode="500" />
            <error statusCode="500" path="C:\Inetpub\vhosts\urbot.net\error_docs\internal_server_error.html" />
            <remove statusCode="501" />
            <error statusCode="501" path="C:\Inetpub\vhosts\urbot.net\error_docs\not_implemented.html" />
            <remove statusCode="502" />
            <error statusCode="502" path="C:\Inetpub\vhosts\urbot.net\error_docs\bad_gateway.html" />
            <remove statusCode="503" />
            <error statusCode="503" path="C:\Inetpub\vhosts\urbot.net\error_docs\maintenance.html" />
        </httpErrors>

        <!-- Tracing -->
        <tracing>
            <traceFailedRequests>
                <clear />
            </traceFailedRequests>
        </tracing>
    </system.webServer>
    <system.web>
        <compilation tempDirectory="C:\Inetpub\vhosts\urbot.net\tmp" />
    </system.web>
</configuration>
